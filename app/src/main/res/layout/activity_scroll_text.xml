<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:textSize="20dp" />

        <include layout="@layout/item_scroll_text" />

        <include
            layout="@layout/item_scroller"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rulerSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:textSize="20dp" />

        <include layout="@layout/item_ruler" />

        <com.sxt.chart.view.RuleView
            android:visibility="gone"
            android:id="@+id/ruleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.sxt.chart.view.MyHorizontalScrollView
            android:visibility="gone"
            android:id="@+id/hor_scrollview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:scrollbars="none">

            <com.sxt.chart.view.RuleView
                android:id="@+id/rule_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20dp" />
        </com.sxt.chart.view.MyHorizontalScrollView>


    </LinearLayout>


</ScrollView>