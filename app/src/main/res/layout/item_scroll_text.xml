<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.sxt.chart.view.StringScrollPicker
        android:id="@+id/scrollPicker"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:spv_disallow_intercept_touch="true"
        app:spv_max_text_size="26dp"
        app:spv_min_text_size="17dp"
        app:spv_orientation="horizontal"
        app:spv_visible_item_count="3" />


</LinearLayout>