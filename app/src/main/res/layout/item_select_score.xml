<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_select_score_root"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <View
        android:id="@+id/item_select_score_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <ImageView
        android:id="@+id/item_select_score_img"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"></ImageView>

    <TextView
        android:id="@+id/item_select_score_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_select_score_img"
        android:text="韩寒"
        android:textColor="@color/black_dark"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_select_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:textColor="@color/score_yellow_text"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/item_select_score_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/credit_button_unchoosen" />

    </LinearLayout>


</RelativeLayout>